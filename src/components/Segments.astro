---
// Segments FINAL - fade-in, cor roxo consistente
const segments = [
  { title: 'Agências de Design', description: 'Entregas criativas, aprovações e versões.' },
  { title: 'Agências Web', description: 'Sprints, entregas e comunicação com clientes.' },
  { title: 'Agências de Vídeo', description: 'Cuts, versões e aprovações de campanha.' },
  { title: 'Agências 3D', description: 'Projetos complexos com múltiplas revisões.' }
];
---

<section class="py-[6rem] bg-[#FAFAFA] border-y border-[#E5E5E5] fade-section">
  <div class="max-w-[60rem] mx-auto px-[1rem] md:px-[1.5rem]">
    
    <div class="text-center mb-[2.5rem]">
      <p class="text-[0.875rem] font-medium text-[#6D28D9] mb-[0.5rem]">Use cases</p>
      <h2 class="text-[1.5rem] sm:text-[2rem] font-semibold text-[#0A0A0A]">
        Para agências criativas de qualquer segmento
      </h2>
    </div>
    
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-[1rem]">
      {segments.map((segment) => (
        <div class="p-[1.5rem] bg-white rounded-[0.5rem] border border-[#E5E5E5] hover:border-[#6D28D9]/30 transition-colors duration-200">
          <h3 class="text-[1rem] font-semibold text-[#0A0A0A] mb-[0.5rem]">{segment.title}</h3>
          <p class="text-[0.875rem] text-[#737373]">{segment.description}</p>
        </div>
      ))}
    </div>
    
  </div>
</section>

<style>
  .fade-section {
    opacity: 0;
    transform: translateY(2rem);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  
  .fade-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

---
// Detailed Features - Grid inspirado em ManyRequests
const features = [
  {
    icon: 'portal',
    title: 'Portal do Cliente',
    description: 'Seu cliente aprova demandas em um ambiente exclusivo com a sua marca.'
  },
  {
    icon: 'whitelabel',
    title: 'White-label',
    description: 'Personalize tudo: domínio, cores, logos e e-mails. O Wikimee fica invisível.'
  },
  {
    icon: 'workspaces',
    title: 'Workspaces',
    description: 'Ambientes digitais flexíveis para organizar times, squads ou clientes separadamente.'
  },
  {
    icon: 'timeline',
    title: 'Cronogramas',
    description: 'Timeline visual para acompanhar prazos e gargalos. Zero surpresas na entrega.'
  },
  {
    icon: 'versioning',
    title: 'Versionamento',
    description: 'Controle de versão de arquivos automático. Nunca mais perca o "Final_V2_AgoraVai.psd".'
  },
  {
    icon: 'kanban',
    title: 'Kanban',
    description: 'Fluxos de trabalho visuais. Arraste e solte tarefas para mover demandas.'
  }
];
---

<section class="py-[6rem] bg-white border-b border-[#E5E5E5]">
  <div class="max-w-[75rem] mx-auto px-[1rem] md:px-[1.5rem] lg:px-[3rem]">
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-x-[3rem] gap-y-[4rem]">
      {features.map((feature) => (
        <div class="flex flex-col items-start group">
          
          <!-- Ícone -->
          <div class="w-[3rem] h-[3rem] bg-[#6D28D9]/5 rounded-[0.75rem] flex items-center justify-center text-[#6D28D9] mb-[1.25rem] group-hover:bg-[#6D28D9] group-hover:text-white transition-colors duration-300">
            {feature.icon === 'portal' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
            )}
            {feature.icon === 'whitelabel' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
            )}
            {feature.icon === 'workspaces' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
            )}
            {feature.icon === 'timeline' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
            )}
            {feature.icon === 'versioning' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
            )}
            {feature.icon === 'kanban' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"/></svg>
            )}
          </div>
          
          <h3 class="text-[1.25rem] font-semibold text-[#0A0A0A] mb-[0.75rem]">
            {feature.title}
          </h3>
          
          <p class="text-[1rem] text-[#737373] leading-relaxed">
            {feature.description}
          </p>
          
        </div>
      ))}
    </div>
    
  </div>
</section>
